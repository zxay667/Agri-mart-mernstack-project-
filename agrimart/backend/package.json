{
  "name": "agrimart-backend",
  "version": "1.0.0",
  "description": "Backend for AgriMart - Farming Supplies E-commerce Platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix ../frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
